<Window x:Class="Invent_Petrov.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Invent_Petrov"
        mc:Ignorable="d"
        Title="ИС по прокату спортивного инвентаря" Height="600" Width="1000"
        MinHeight="600" MinWidth="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75" ></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="LightGreen">
            <Image Source="/Resourses/logo.png" HorizontalAlignment="Left" 
               VerticalAlignment="Center"/>
            <Label HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Спортивный Инвентарь" FontSize="35">
                </TextBlock>
            </Label>
        </Grid>

        <Grid>
            <Frame x:Name="MainFrame" Grid.Row="1"
             NavigationUIVisibility="Hidden"></Frame></Grid>
    </Grid>
</Window>